<web-app>

	<resource-ref>
		<description>JDBC Resource</description>
		<res-ref-name>jdbc/database</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<context-param>
		<param-name>jdbc-resource</param-name>
		<param-value>jdbc/database</param-value>
	</context-param>

	<listener>
		<listener-class>com.github.jeromerocheteau.JdbcListener
		</listener-class>
	</listener>

	


	<filter>
		<filter-name>jdbc-filter</filter-name>
		<filter-class>com.github.jeromerocheteau.JdbcFilter</filter-class>
	</filter>

	<filter>
		<filter-name>filter</filter-name>
		<filter-class>com.github.jeromerocheteau.JdbcFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>average</servlet-name>
		<servlet-class>fr.icam.emit.servlets.Average</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>average</servlet-name>
		<url-pattern>/algorithm/average</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>integral</servlet-name>
		<servlet-class>fr.icam.emit.servlets.Integral</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>integral</servlet-name>
		<url-pattern>/algorithm/integral</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>integral</servlet-name>
		<servlet-class>fr.icam.emit.servlets.Integral</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>integral</servlet-name>
		<url-pattern>/algorithm/integral</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>maximum</servlet-name>
		<servlet-class>fr.icam.emit.servlets.ReturnMax</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>maximum</servlet-name>
		<url-pattern>/algorithm/maximum</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>minimum</servlet-name>
		<servlet-class>fr.icam.emit.servlets.ReturnMin</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>minimum</servlet-name>
		<url-pattern>/algorithm/minimum</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>StandardDeviation</servlet-name>
		<servlet-class>fr.icam.emit.servlets.StandardDeviation</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>StandardDeviation</servlet-name>
		<url-pattern>/algorithm/StDev</url-pattern>
	</servlet-mapping>
	
	
	
</web-app>
	