<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	version="3.0">

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <resource-ref>
    <description>JDBC Resource</description>
    <res-ref-name>jdbc/database</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

  <context-param>
    <param-name>jdbc-resource</param-name>
    <param-value>jdbc/database</param-value>
  </context-param>

  <listener>
    <listener-class>com.github.jeromerocheteau.JdbcListener</listener-class>
  </listener>

  <context-param>
    <param-name>mongodb-server</param-name>
    <param-value>mongodb://localhost:27017</param-value>
  </context-param>

  <context-param>
    <param-name>mongodb-database</param-name>
    <param-value>emit</param-value>
  </context-param>
  
  <listener>
    <listener-class>fr.icam.emit.listeners.MongoListener</listener-class>
  </listener>

  <listener>
    <listener-class>fr.icam.emit.listeners.MqttPublisherListener</listener-class>
  </listener>

  <filter>
    <filter-name>jdbc-filter</filter-name>
    <filter-class>com.github.jeromerocheteau.JdbcFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>jdbc-filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>access-filter</filter-name>
    <filter-class>fr.icam.emit.filters.AccessFilter</filter-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/access/filter.sql</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>access-filter</filter-name>
    <url-pattern>/retrieve</url-pattern>
  </filter-mapping>

  <!-- users -->

  <servlet>
    <servlet-name>user-clear</servlet-name>
    <servlet-class>fr.icam.emit.services.users.Clear</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>user-clear</servlet-name>
    <url-pattern>/user/clear</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>user-name</servlet-name>
    <servlet-class>fr.icam.emit.services.users.Name</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>user-name</servlet-name>
    <url-pattern>/user/name</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>user-role</servlet-name>
    <servlet-class>fr.icam.emit.services.users.Role</servlet-class>
    <init-param>
      <param-name>role</param-name>
      <param-value>admin</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>user-role</servlet-name>
    <url-pattern>/user/role</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>user-update</servlet-name>
    <servlet-class>fr.icam.emit.services.users.Update</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/users/update.sql</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>user-update</servlet-name>
    <url-pattern>/user/update</url-pattern>
  </servlet-mapping>

  <!-- tokens -->

  <servlet>
    <servlet-name>token-item</servlet-name>
    <servlet-class>fr.icam.emit.services.tokens.Item</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/tokens/item.sql</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>token-item</servlet-name>
    <url-pattern>/tokens/item</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>token-create</servlet-name>
    <servlet-class>fr.icam.emit.services.tokens.Create</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/tokens/create.sql</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>token-create</servlet-name>
    <url-pattern>/tokens/create</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>access-create</servlet-name>
    <servlet-class>fr.icam.emit.services.access.Create</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/access/create.sql</param-value>
    </init-param>
  </servlet>

  <servlet>
    <servlet-name>token-delete</servlet-name>
    <servlet-class>fr.icam.emit.services.commons.Deleter</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/tokens/delete.sql</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>token-delete</servlet-name>
    <url-pattern>/tokens/delete</url-pattern>
  </servlet-mapping>

  <!-- clients -->

  <servlet>
    <servlet-name>client-size</servlet-name>
    <servlet-class>fr.icam.emit.services.commons.Sizer</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/clients/size.sql</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>client-size</servlet-name>
    <url-pattern>/clients/size</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>client-page</servlet-name>
    <servlet-class>fr.icam.emit.services.clients.Pager</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/clients/page.sql</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>client-page</servlet-name>
    <url-pattern>/clients/page</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>client-create</servlet-name>
    <servlet-class>fr.icam.emit.services.clients.Creator</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/clients/create.sql</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>client-create</servlet-name>
    <url-pattern>/clients/create</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>client-update</servlet-name>
    <servlet-class>fr.icam.emit.services.clients.Updater</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/clients/update.sql</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>client-update</servlet-name>
    <url-pattern>/clients/update</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>client-delete</servlet-name>
    <servlet-class>fr.icam.emit.services.clients.Deleter</servlet-class>
    <init-param>
      <param-name>sql-query</param-name>
      <param-value>/fr/icam/emit/queries/clients/delete.sql</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>client-delete</servlet-name>
    <url-pattern>/clients/delete</url-pattern>
  </servlet-mapping>

  <!-- security -->

 <security-constraint>
   <web-resource-collection>
     <web-resource-name>public-area</web-resource-name>
      <url-pattern>/retrieve</url-pattern>
   </web-resource-collection>
 </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>user-area</web-resource-name>
      <url-pattern>/index.html</url-pattern>
      <url-pattern>/settings.html</url-pattern>
      <url-pattern>/user/clear</url-pattern>
      <url-pattern>/user/name</url-pattern>
      <url-pattern>/user/role</url-pattern>
      <url-pattern>/user/update</url-pattern>
      <url-pattern>/tokens/item</url-pattern>
      <url-pattern>/tokens/create</url-pattern>
      <url-pattern>/tokens/delete</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>user</role-name>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>admin-area</web-resource-name>
      <url-pattern>/clients.html</url-pattern>
      <url-pattern>/clients/size</url-pattern>
      <url-pattern>/clients/page</url-pattern>
      <url-pattern>/clients/create</url-pattern>
      <url-pattern>/clients/update</url-pattern>
      <url-pattern>/clients/delete</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>forbidden-methods</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint/>
  </security-constraint>

  <security-role>
    <role-name>admin</role-name>
  </security-role>

  <security-role>
    <role-name>user</role-name>
  </security-role>

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/security/index.html</form-login-page>
      <form-error-page>/security/failure.html</form-error-page>
    </form-login-config>
  </login-config>

</web-app>
